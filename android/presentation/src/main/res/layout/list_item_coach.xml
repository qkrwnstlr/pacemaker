<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_coach"
        android:layout_width="@dimen/image_56"
        android:layout_height="@dimen/image_56"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:visibility="gone"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_coach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_10"
            android:scaleType="fitXY"
            android:src="@drawable/red" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_coach_talk"
        style="@style/ChatShape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingHorizontal="@dimen/margin_30"
        android:paddingVertical="@dimen/margin_16"
        android:text="페이스가 목표보다 살짝 느렸지만, 심박수를 유지하며 끝까지 달린 건 대단해."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_coach" />
</androidx.constraintlayout.widget.ConstraintLayout>