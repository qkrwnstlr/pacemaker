<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_16">

    <include
        android:id="@+id/train_info_title"
        layout="@layout/train_info_title_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/train_info_chart"
        layout="@layout/train_info_chart_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
        app:layout_constraintEnd_toEndOf="@id/train_info_title"
        app:layout_constraintStart_toStartOf="@id/train_info_title"
        app:layout_constraintTop_toBottomOf="@id/train_info_title" />

</androidx.constraintlayout.widget.ConstraintLayout>