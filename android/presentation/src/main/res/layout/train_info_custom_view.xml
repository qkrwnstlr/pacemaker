<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_24">

    <TextView
        android:id="@+id/tv_plan_state"
        style="@style/BoldLargeText"
        android:text="2024.09.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_count"
        style="@style/PlanText"
        android:layout_marginStart="@dimen/margin_16"
        android:text="훈련3회차"
        app:layout_constraintBottom_toBottomOf="@id/tv_plan_state"
        app:layout_constraintStart_toEndOf="@id/tv_plan_state"
        app:layout_constraintTop_toTopOf="@id/tv_plan_state" />

    <TextView
        android:id="@+id/tv_plan_inst"
        style="@style/PlanText"
        android:layout_marginTop="@dimen/margin_8"
        android:text="10km | 6'30''| Easy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_plan_state" />

    <ImageView
        android:layout_width="@dimen/image_36"
        android:layout_height="@dimen/image_36"
        android:src="@drawable/baseline_skip_next_24"
        app:layout_constraintBottom_toBottomOf="@id/tv_plan_inst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>