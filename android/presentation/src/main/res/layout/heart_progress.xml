<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_heart_rate"
        style="@style/BoldLargeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="심박 구간"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/zone1"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:text="zone1"
        app:layout_constraintEnd_toStartOf="@+id/pb_zone1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_heart_rate" />

    <ProgressBar
        android:id="@+id/pb_zone1"
        style="@style/HorizontalProgressBarStyle"
        android:layout_width="0dp"
        android:progressDrawable="@drawable/progress_bar_blue"
        app:layout_constraintBottom_toBottomOf="@+id/zone1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zone1"
        app:layout_constraintTop_toTopOf="@+id/zone1" />

    <TextView
        android:id="@+id/zone2"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:text="zone2"
        app:layout_constraintEnd_toStartOf="@+id/pb_zone2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zone1" />

    <ProgressBar
        android:id="@+id/pb_zone2"
        style="@style/HorizontalProgressBarStyle"
        android:layout_width="0dp"
        android:progressDrawable="@drawable/progress_bar_green"
        app:layout_constraintBottom_toBottomOf="@id/zone2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zone2"
        app:layout_constraintTop_toTopOf="@id/zone2" />

    <TextView
        android:id="@+id/zone3"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:text="zone3"
        app:layout_constraintEnd_toStartOf="@+id/pb_zone3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zone2" />

    <ProgressBar
        android:id="@+id/pb_zone3"
        style="@style/HorizontalProgressBarStyle"
        android:layout_width="0dp"
        android:progressDrawable="@drawable/progress_bar_yellow"
        app:layout_constraintBottom_toBottomOf="@id/zone3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zone3"
        app:layout_constraintTop_toTopOf="@id/zone3" />

    <TextView
        android:id="@+id/zone4"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:text="zone4"
        app:layout_constraintEnd_toStartOf="@+id/pb_zone4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zone3" />

    <ProgressBar
        android:id="@+id/pb_zone4"
        style="@style/HorizontalProgressBarStyle"
        android:layout_width="0dp"
        android:progressDrawable="@drawable/progress_bar_orange"
        app:layout_constraintBottom_toBottomOf="@id/zone4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zone4"
        app:layout_constraintTop_toTopOf="@id/zone4" />

    <TextView
        android:id="@+id/zone5"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:text="zone5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pb_zone5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zone4" />

    <ProgressBar
        android:id="@+id/pb_zone5"
        style="@style/HorizontalProgressBarStyle"
        android:layout_width="0dp"
        android:progressDrawable="@drawable/progress_bar_red"
        app:layout_constraintBottom_toBottomOf="@id/zone5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zone5"
        app:layout_constraintTop_toTopOf="@id/zone5" />
</androidx.constraintlayout.widget.ConstraintLayout>