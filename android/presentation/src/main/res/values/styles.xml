<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CustomFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@drawable/button_background_selector</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:elevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayExtended</item>
    </style>

    <style name="ShapeAppearanceOverlayExtendedCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="CustomCircleFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:elevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayExtendedCircle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="BoldLargeText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_26</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlanText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResultText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin_6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RankText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallBoldText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ExtraSmallBoldText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ExtraSmallGrayText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Large22BoldText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleText" parent="">
        <item name="android:textSize">@dimen/text_26</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteBoldText" parent="">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/margin_8</item>
    </style>

    <style name="XLargeText" parent="">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeText" parent="">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DayToggleButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:background">@drawable/day_selector</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="HorizontalProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:max">100</item>
    </style>

    <style name="CircleShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ChatShape">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_background_coach</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="StudentChatShape">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/rounded_background_student</item>
    </style>

    <style name="Body_ThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyMaterialAlertDialog.MaterialComponents.Body.Text
        </item>
        <item name="colorOnSurface">@color/secondPrimary</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="BodyMaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/reversePrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>