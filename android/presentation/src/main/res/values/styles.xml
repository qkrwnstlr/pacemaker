<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CustomFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:elevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayExtended</item>
    </style>

    <style name="TitleText" parent="">
        <item name="android:textSize">@dimen/text_26</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>