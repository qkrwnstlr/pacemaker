    <style name="SmallText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ExtraSmallBoldText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ExtraSmallGrayText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Large22BoldText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
